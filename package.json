{
	"name": "devlapse",
	"version": "0.0.2",
	"description": "Timelapse screenshots",
	"author": "Stephen Leitnick",
	"private": true,
	"main": "build/main.js",
	"license": "MIT",
	"scripts": {
		"install_build": "npm i --prefix ./build screenshot-desktop ffmpeg-binaries",
		"build": "npm run install_build && webpack --config webpack.main.js --mode production && webpack --config webpack.renderer.js --mode production",
		"dev": "npm run semantic && npm run install_build && npm run devwatch",
		"devwatch": "concurrently --kill-others \"webpack --config webpack.main.js --mode development --watch\" \"webpack --config webpack.renderer.js --mode development --watch\"",
		"semantic": "gulp --gulpfile ./semantic/gulpfile.js build",
		"start": "electron ."
	},
	"build": {
		"appId": "com.sleitnick.devlapse",
		"productName": "DevLapse",
		"win": {
			"target": "nsis"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Sleitnick/DevLapse.git"
	},
	"dependencies": {
		"electron-json-storage": "^4.1.6",
		"ffmpeg-binaries": "^4.0.0",
		"jquery": "^3.4.1",
		"redux": "^4.0.1",
		"screenshot-desktop": "^1.7.0",
		"semantic-ui": "^2.4.2",
		"tmp": "^0.1.0"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^1.9.0",
		"@typescript-eslint/parser": "^1.9.0",
		"@typescript-eslint/typescript-estree": "^1.9.0",
		"concurrently": "^4.1.0",
		"css-loader": "^2.1.1",
		"electron": "^5.0.2",
		"electron-builder": "^20.41.0",
		"eslint": "^5.16.0",
		"file-loader": "^3.0.1",
		"gulp": "^3.9.1",
		"html-webpack-plugin": "^3.2.0",
		"mini-css-extract-plugin": "^0.6.0",
		"node-sass": "^4.12.0",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.1",
		"ts-loader": "^6.0.1",
		"typescript": "^3.4.5",
		"webpack": "^4.32.2",
		"webpack-cli": "^3.3.2"
	}
}
